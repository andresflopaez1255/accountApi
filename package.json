{
  "name": "typescript-template",
  "version": "1.0.4",
  "description": "A complete Node.js project template using TypeScript and following general best practices.",
  "keywords": [
    "typescript",
    "template"
  ],
  "author": {
    "name": "Andres florez"
  },
  "license": "BSD-3-Clause",
  "main": "src/index.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "start:dev": "PORT=5000 node dist/index.js",
    "clean": "(rm -r ./dist || true)",
    "dev": "PORT=5000 nodemon --exec ts-node src/index.ts --watch src",
    "lint": "eslint --ext .ts --fix src/**/*.ts test/**/*.ts",
    "start": "npm run build && node dist/index.js",
    "swagger": "tsoa spec"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.26",
    "@types/node-cron": "^3.0.1",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "chai": "^4.1.2",
    "conventional-changelog-cli": "^2.0.12",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^8.2.0",
    "mocha": "^9.0.0",
    "nyc": "^15.0.0",
    "prisma": "^4.4.0",
    "source-map-support": "^0.5.12",
    "typescript": "4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@prisma/client": "^4.4.0",
    "body-parser": "^1.19.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "messagebird": "^3.7.2",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.0",
    "nodemon": "^2.0.15",
    "prisma": "^4.4.0",
    "sitka": "^1.0.5",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.6.0",
    "ts-node": "^10.0.0",
    "ts-to-openapi": "^1.3.0",
    "tsoa": "^4.1.3",
    "twilio": "^3.75.1",
    "whatsapp-web.js": "^1.16.4"
  }
}
